---
import PlayButton from "@components/PlayButton";
---

<div class="flex flex-row justify-between w-full px-1 z-50">
  <div class="w-[200px]">CurrentSong</div>

  <div class="grid place-content-center gap-4 flex-1">
    <div class="flex justify-center flex-col items-center">
      <PlayButton
        type="player"
        client:load
        transition:name="play-button"
        transition:persist
      />
    </div>
  </div>

  <div class="grid place-content-center">VolumeControl</div>
</div>
